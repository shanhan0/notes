/* components/dialog/dialog.wxss */
page{
  width:100%;
  height:100%;
}
.mask{
  width:100%;
  height:100%;
  position: absolute;
  top:0;
  background:rgba(0,0,0,.7);
  
}
.box{
  position: absolute;
  width:400rpx;
  height:400rpx;
  background:#fff;
  left:50%;
  margin-left:-200rpx;
  top:50%;
  margin-top:-200rpx;
  z-index:99999;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-radius:20rpx;
}
.closea{
  position: absolute;
  right:-10rpx;
  top:-30rpx;
  color:#f00;
  border:1px solid #ccc;
  border-radius:50%;
  width:60rpx;
  height:60rpx;
  text-align: center;
  line-height: 60rpx;
}
.box{
  line-height:50rpx;
  padding:20rpx;
}
.box image{
  width:150rpx;
  height:150rpx;
  display: inline-block;
  margin-bottom:20rpx;
  
}
.txt{
  color:#f00;
  font-size:40rpx;
  margin-left:10rpx;
}